<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuItem" parent="TextAppearance.AppCompat.Menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:textColor">#848484</item>
        <item name="android:background">#242625</item>
    </style>

    <style name="MenuItem.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#3f3f3f</item>
    </style>




</resources>
